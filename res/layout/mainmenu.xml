<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#BFB1B1">

    <TextView
        android:id="@+id/selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dip"
        android:layout_marginLeft="16dp"
        android:textColor="#808080"
        android:textSize="40sp" />

     <Button
         android:id="@+id/bSaveMeNow"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:layout_marginBottom="22dp"
         android:textStyle="bold"
         android:onClick="sendSms"
         android:drawableLeft="@android:drawable/btn_star_big_on"
         android:layout_marginLeft="16dp"
         android:text="Save Me" />

     <ImageView
         android:id="@+id/imageView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/selection"
         android:layout_alignTop="@+id/selection"
         android:src="@drawable/batman" />

     <TextView
         android:id="@+id/tvSetUpMessages"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/imageView3"
         android:layout_alignLeft="@+id/tvSelectEmergencyContacts"
         android:layout_marginBottom="60dp"
         android:text="* Set up your Emergency Messages"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textStyle="italic" />

     <TextView
         android:id="@+id/tvSelectSpanner"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/tvSelectEmergencyContacts"
         android:layout_alignLeft="@+id/imageView2"
         android:text="* Select the spanner icon..."
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textStyle="italic" />

     <TextView
         android:id="@+id/tvSelectEmergencyContacts"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/tvSetUpMessages"
         android:layout_alignLeft="@+id/tvSelectSpanner"
         android:text="* Select three emergency contacts"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textStyle="italic" />

     <ImageView
         android:id="@+id/anchor"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/tvSaveApp"
         android:layout_below="@+id/tvSetUpMessages"
         android:maxHeight="12dp"
         android:maxWidth="12dp"
         android:onClick="onClick"
         android:src="@drawable/configure" />

     <ImageView
         android:id="@+id/imageView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/bSaveMeNow"
         android:layout_toRightOf="@+id/bSaveMeNow"
         android:src="@drawable/press" />

     <TextView
         android:id="@+id/tvSaveApp"
         android:layout_width="wrap_content"
         android:layout_height="100dp"
         android:layout_alignTop="@+id/imageView2"
         android:layout_toRightOf="@+id/bSaveMeNow"
         android:text="Save App"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textSize="40dp" />

     <ImageView
         android:id="@+id/imageView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/anchor"
         android:layout_alignRight="@+id/tvSetUpMessages"
         android:src="@drawable/click" />

     <ImageView
         android:id="@+id/imageView3"
         android:layout_width="70dp"
         android:layout_height="70dp"
         android:layout_above="@+id/bSaveMeNow"
         android:layout_toRightOf="@+id/imageView2"
         android:src="@drawable/mwisho" />

</RelativeLayout>